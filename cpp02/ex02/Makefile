NAME    := a.out
CXX     := c++
CXXFLAGS:= -Wall -Wextra -Werror
SRCS    := Fixed.cpp main.cpp

OBJS    := $(SRCS:.cpp=.o)

.PHONY  : all
all     : $(NAME)

$(NAME) : $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)

.PHONY: clean
clean:
	$(RM) $(OBJS)

.PHONY: fclean
fclean: clean
	$(RM) $(NAME)

.PHONY: re
re: fclean all

.PHONY: test
test: $(NAME)
	./$(NAME)

.PHONY: origin
origin: CXXFLAGS += -D ORIGIN=1
origin: re

.PHONY: debug
debug: CXXFLAGS += -std=c++98 -pedantic -g -fsanitize=address
debug: re
